<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout 
	    android:id="@+id/ll_top_title"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:background="#FF6F9F"
	    android:orientation="horizontal"
	    >
	    <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_visitor_vip" />
	    <TextView 
	        android:id="@+id/first_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="6.5"
	        android:gravity="center"
	        android:text="首页"
	        android:textSize="38px"
	        android:textColor="#ffffff"
	        />
	      <ImageView
            android:id="@+id/iv_search"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/search_white" />
	</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_below="@id/ll_top_title"
        android:orientation="horizontal" >

        

        <TextView
            android:id="@+id/tv_tongcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="同城"
            android:gravity="center"
            android:textColor="#FF6F9F"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推荐"
            android:gravity="center"
            android:textColor="#A8A8A8"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注"
            android:gravity="center"
            android:textColor="#A8A8A8"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_xihuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="喜欢"
            android:gravity="center"
            android:textColor="#A8A8A8"
            android:textSize="28px" />

      
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_title"
        android:scaleType="matrix"
        android:src="@drawable/slack" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="55dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FCFCFC"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_bt_ff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/first_nav_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="#FF6F9F" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/btn_mail_white" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_right"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="私信"
                    android:textColor="#FF6F9F" />

					<TextView
					    android:id="@+id/iv_tip"
					    android:layout_width="15dp"
					    android:layout_height="15dp"
					    android:layout_alignRight="@+id/textView1"
					    android:layout_alignParentTop="true"
					    android:gravity="center"
					    android:text="11"
					    android:textColor="#ffffff"
					    android:textSize="13px"
					    android:background="@drawable/ic_btn_msg" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_discovery_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_third"
                    android:gravity="center"
                    android:text="发现"
                    android:textColor="#FF6F9F" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_info_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_fourth"
                    android:gravity="center"
                    android:text="个人"
                    android:textColor="#FF6F9F" />
            </RelativeLayout>
        </LinearLayout>
        
    </RelativeLayout>
		  <RelativeLayout
        	android:id="@+id/rl_01"
       		android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ll_title"
            android:background="#ffffff" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vImagePager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/rl_01"
        android:layout_gravity="center"
        android:layout_marginTop="1px"
        android:layout_weight="1.0"
        android:background="#ffffff"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</RelativeLayout>