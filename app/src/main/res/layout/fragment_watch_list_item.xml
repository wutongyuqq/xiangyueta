<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F7FB"
    android:paddingBottom="20dp"
    >

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center_vertical">
      <com.xiangyueta.two.view.CircleImageView
           android:id="@+id/ci_head"
           android:layout_width="60dp"
           android:layout_height="60dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
           android:src="@drawable/girl"/>
       <LinearLayout
           android:id="@+id/ll_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/ci_head"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#000000"
               android:textSize="14sp"
               android:text="华"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/red_back"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:layout_marginLeft="10dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="10dp"
                   android:layout_height="10dp"
                   android:scaleType="fitXY"
                   android:src="@drawable/sex_girl"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="27"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/ll_02"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/ll_name"
           android:layout_toRightOf="@+id/ci_head"
           android:layout_marginLeft="10dp"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_city"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:layout_marginTop="10dp"
               android:textColor="#999999"
               android:text="看电影"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@+id/ll_02"
           android:orientation="horizontal">
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="new"
               android:layout_marginBottom="3dp"
               android:paddingRight="15dp"
               android:textColor="#ff507e"/>

       <TextView
           android:id="@+id/tv_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="今天11:14"
           android:layout_marginBottom="3dp"
           android:paddingRight="15dp"
           android:textColor="#f5c117"/>

       </LinearLayout>

   </RelativeLayout>



</RelativeLayout>
